<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fegeley.steamgametracker.MainActivity2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:adjustViewBounds="true"
                android:layout_weight="0.25" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <com.fegeley.steamgametracker.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="In the 3+ years you have been on Steam, your library has grown to 1141 items, currently valued at $xxxx.xx, requires xxxx.xGB, and you&apos;ve spent xxxx.x hours playing it."
                android:id="@+id/textView8"
                android:layout_weight="0.75"
                android:singleLine="false"
                android:textSize="500sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.fegeley.steamgametracker.AutoResizeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView9" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
